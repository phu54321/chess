import moveRule.pawn;
import moveRule.rook;
import moveRule.king;
import moveRule.knight;
import moveRule.bishop;
import moveRule.queen;

function calcMovablePos(unitType, player, x, y, currentTurn, cb: EUDFuncPtr(4, 0)) {
  if (unitType == $U('Pawn')) {
    pawn.calcMovablePos(player, x, y, currentTurn, cb);
  }

  if (unitType == $U('Rook')) {
    rook.calcMovablePos(player, x, y, currentTurn, cb);
  }

  if (unitType == $U('Bishop')) {
    bishop.calcMovablePos(player, x, y, currentTurn, cb);
  }

  if (unitType == $U('Queen')) {
    queen.calcMovablePos(player, x, y, currentTurn, cb);
  }

  if (unitType == $U('King')) {
    king.calcMovablePos(player, x, y, currentTurn, cb);
  }

  if (unitType == $U('Knight')) {
    knight.calcMovablePos(player, x, y, currentTurn, cb);
  }
}
